{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2020",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "dist",
    "allowJs": true,
    "emitDeclarationOnly": true
  },
  "include": ["src/**/*.js"],
  "exclude": ["node_modules", "dist", "examples", "src/**/*.test.js"]
}
